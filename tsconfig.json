{
  "compilerOptions": {
    "target": "es2019",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "CommonJS",
    "outDir": "dist",
    "declaration": true,
    "strictNullChecks": false,
    "lib": ["es2020", "DOM"] 
  },
  "include": [
    "src/*",
    "config/testCases.ts",
    "index.ts",
    "routes",
    "src/routes/routesMap.ts"
  ],
  "exclude": ["node_modules"]
}
